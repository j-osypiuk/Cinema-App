@{
    ViewData["Title"] = "Home Page";
}

@model HomeVM

<div class="container" data-bs-spy="scroll" data-bs-target="#navbar" data-bs-root-margin="0px 0px -40%" data-bs-smooth-scroll="true" tabindex="0">
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Model.HomeContent.CarouselImgUrl_1" class="d-block w-100" alt="Carousel image 1">
            </div>
            <div class="carousel-item">
                <img src="@Model.HomeContent.CarouselImgUrl_2" class="d-block w-100" alt="Carousel image 1">
            </div>
            <div class="carousel-item">
                <img src="@Model.HomeContent.CarouselImgUrl_3" class="d-block w-100" alt="Carousel image 1">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="bg-primary text-center p-3">
        <h1 class="text-white m-0">Welcome to Cinemax</h1>
    </div>
    <div class="row mx-0 p-3 pb-5 bg-primary bg-opacity-50">
        <div class="col-lg-3 col-md-4 col-sm-4">
            <h3 class="text-white text-opacity-75"><i class="bi bi-list"></i> Genres</h3>
            <hr />
            <ul class="nav flex-column mb-3">
                @foreach (var genre in Model.Genres)
                {
                    <li class="nav-item mb-1 mx-0">
                        <a class="btn btn-primary text-white-50 w-100" role="button" asp-controller="Home" asp-action="GenreMovies" asp-route-genreId="@genre.Id">
                            @genre.Name
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="col-lg-9 col-md-8 col-sm-8">
            <h3 class="text-white text-opacity-75"><i class="bi bi-body-text"></i> Blog</h3>
            <hr />
            <h5 class="text-white text-opacity-75">@Model.HomeContent.BlogTitle_1</h5>
            <p class="text-white-50">
                @Model.HomeContent.BlogContent_1
            </p>
            <hr />
            <h5 class="text-white text-opacity-75">@Model.HomeContent.BlogTitle_2</h5>
            <p class="text-white-50">
                @Model.HomeContent.BlogContent_2
            </p>
            <hr />
            <h5 class="text-white text-opacity-75">@Model.HomeContent.BlogTitle_3</h5>
            <p class="text-white-50">
                @Model.HomeContent.BlogContent_3
            </p>
        </div>
    </div>
    <div class="bg-primary text-center p-3" id="movies">
        <h2 class="text-white m-0">Movies</h2>
    </div>
    <div class="row m-0 pt-2 bg-primary bg-opacity-50">
        @foreach (var movie in Model.Movies)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 p-1">
                <div class="card bg-primary p-2 h-100">
                    <img src="@movie.ImageUrl" class="card-img-top" alt="Movie poster">
                    <div class="card-body row">
                        <hr />
                        <span class="card-title text-white fs-3">@movie.Title</span>
                        <div>
                            @foreach (var movieGenre in movie.MovieGenres)
                            {
                                <span class="text-white fw-bold text-opacity-75 bg-dark p-1 rounded d-inline-block mb-2">@movieGenre.Genre.Name</span>
                            }
                        </div>
                        <a class="btn btn-warning mt-3 w-100 text-primary fw-bold text-center align-self-end" asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">
                            <i class="bi fw-bold bi-film"></i> Watch
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>