@model List<Movie>

<div class="d-flex justify-content-center">
	<div class="card shadow border-0 mt-4 w-100">
		<div class="card-header bg-black bg-gradient mt-0 py-1">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-2">Movie list</h2>
				</div>
			</div>
		</div>
		<div class="card-body bg-dark p-4">
			<div class="row pb-3">
				<div class="col-6">
				</div>
				<div class="col-6 text-end">
					<a asp-controller="Movie" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Movie</a>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table table-dark table-bordered table-striped">
					<thead>
						<tr>
							<th>Title</th>
							<th class="d-none d-md-table-cell">Director</th>
							<th class="d-none d-md-table-cell">Release Date</th>
							<th class="d-none d-lg-table-cell">Genre</th>
							<th class="d-none d-md-table-cell">Ticket Price</th>
							<th></th>

						</tr>
					</thead>
					<tbody>
						@foreach (var movie in Model)
						{
							<tr class="align-middle">
								<td>@movie.Title</td>
								<td class="d-none d-md-table-cell">@movie.Director</td>
								<td class="d-none d-md-table-cell">@movie.ReleaseDate.ToShortDateString()</td>
								<td class="d-none d-lg-table-cell">
									@foreach (var movieGenre in movie.MovieGenres)
									{
										<ul class="list-unstyled">
											<li>@movieGenre.Genre.Name</li>
										</ul>
									}
								</td>
								<td class="d-none d-md-table-cell">@movie.TicketPrice.ToString("C")</td>
								<td>
									<div class="d-flex justify-content-between">
										<div class="w-75 btn-group" role="group">
											<a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id" class="text-info mx-2 text-decoration-none">
												<i class="bi bi-pencil-square"></i> Edit
											</a>
											<a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" class="text-danger ms-4 text-decoration-none">
												<i class="bi bi-trash3-fill"></i> Delete
											</a>
										</div>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
