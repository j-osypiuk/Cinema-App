@model List<Movie>

<div class="row justify-content-center">
	<div class="card shadow border-0 bg-primary bg-opacity-50 mt-4 w-100 px-0">
		<div class="card-header bg-primary py-1">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-2 my-0">Movie list</h2>
				</div>
			</div>
		</div>
		<div class="card-body bg-dark p-4">
			<div class="row pb-3">
				<div class="col-12 text-end">
					<a asp-controller="Movie" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Movie</a>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table table-dark table-bordered table-striped">
					<thead>
						<tr class="align-middle">
							<th>Title</th>
							<th class="d-none d-md-table-cell">Director</th>
							<th class="d-none d-md-table-cell">Release Year</th>
							<th class="d-none d-lg-table-cell">Genre</th>
							<th class="d-none d-md-table-cell">Ticket Price</th>
							<th></th>

						</tr>
					</thead>
					<tbody>
						@foreach (var movie in Model)
						{
							<tr class="align-middle">
								<td class="align-middle py-1">
									<a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="text-white-50 text-decoration-none">@movie.Title</a>
								</td>
								<td class="d-none d-md-table-cell">@movie.Director</td>
								<td class="d-none d-md-table-cell">@movie.ReleaseDate.Year</td>
								<td class="d-none d-lg-table-cell">
									@foreach (var movieGenre in movie.MovieGenres)
									{
										<ul class="list-unstyled">
											<li>@movieGenre.Genre.Name</li>
										</ul>
									}
								</td>
								<td class="d-none d-md-table-cell">@movie.TicketPrice.ToString("C")</td>
								<td>
									<div class="row justify-content-between">
										<a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id" class="text-info text-decoration-none">
											<i class="bi bi-pencil-square"></i> Edit
										</a>
										<a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" class="mt-2 text-danger text-decoration-none">
											<i class="bi bi-trash3-fill"></i> Delete
										</a>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
