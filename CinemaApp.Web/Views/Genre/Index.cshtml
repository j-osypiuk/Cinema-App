@model List<Genre>

<div class="row justify-content-center">
	<div class="card shadow border-0 bg-primary bg-opacity-50 mt-4 w-100 px-0">
		<div class="card-header bg-primary py-1">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-2 my-0">Genre list</h2>
				</div>
			</div>
		</div>
		<div class="card-body bg-dark p-0 p-sm-4">
			<div class="row pb-3">
				<div class="col-6">
				</div>
				<div class="col-6 text-end mt-3 mt-sm-0">
					<a asp-controller="Genre" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Genre</a>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table table-dark table-bordered table-striped">
					<thead>
						<tr>
							<th>Genre Name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var genre in Model)
						{
							<tr>
								<td class="col-3 col-sm-6">
									<div>
										@genre.Name
									</div>
								</td>
								<td class="col-9 col-sm-6">
									<div class="row justify-content-between">

										<div class="w-75 btn-group" role="group">
											<a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.Id" class="text-info mx-2 text-decoration-none">
												<i class="bi bi-pencil-square"></i> Edit
											</a>
											<a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id" class="text-danger ms-4 text-decoration-none">
												<i class="bi bi-trash3-fill"></i> Delete
											</a>
										</div>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


