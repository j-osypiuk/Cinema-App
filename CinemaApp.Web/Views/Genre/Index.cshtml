@model List<Genre>

<div class="d-flex justify-content-center">
	<div class="card shadow border-0 mt-4 w-50">
		<div class="card-header bg-black bg-gradient mt-0 py-1">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-2">Genres list</h2>
				</div>
			</div>
		</div>
		<div class="card-body bg-dark p-4">
			<div class="row pb-3">
				<div class="col-6">
				</div>
				<div class="col-6 text-end">
					<a asp-controller="Genre" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Genre</a>
				</div>
			</div>
			<table class="table table-dark table-bordered table-striped">
				<thead>
					<tr>
						<th>Genre Name</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var genre in Model)
					{
						<tr>
							<td>
								<div class="d-flex justify-content-between">
									<div>
										@genre.Name
									</div>
									<div class="w-75 btn-group" role="group">
										<a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.Id" class="text-info mx-2 text-decoration-none">
											<i class="bi bi-pencil-square"></i> Edit
										</a>
										<a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id" class="text-danger ms-4 text-decoration-none">
											<i class="bi bi-trash3-fill"></i> Delete
										</a>
									</div>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

