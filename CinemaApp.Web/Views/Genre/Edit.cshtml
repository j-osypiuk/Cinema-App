@model Genre

<div class="row justify-content-center">
	<div class="card col-lg-6 shadow bg-primary bg-opacity-50 mt-4 px-0">
		<div class="card-header border-0 bg-primary">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white my-0 py-2">Edit Genre</h2>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<form method="post" class="row">
				<div class="mb-3">
					<label asp-for="Name" class="text-white-50 form-label"></label>
					<input asp-for="Name" class="form-control" placeholder="Genre Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-sm-3">
						<button type="submit" class="btn btn-primary form-control">Edit</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts
	{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
